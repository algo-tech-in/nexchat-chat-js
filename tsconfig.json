{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"]
}
